{
  "compilerOptions": {
    "target": "es2019",
    "allowJs": true,
    "moduleResolution": "node",

    // Don't be viral!
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,

    // strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // lint-style rules
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "experimentalDecorators": true,
    "paths": {
      "dummy/tests/*": [
        "tests/*"
      ],
      "dummy/*": [
        "tests/dummy/app/*",
        "app/*"
      ],
      "tracked-built-ins": [
        "addon"
      ],
      "tracked-built-ins/*": [
        "addon/*"
      ],
      "tracked-built-ins/test-support": [
        "addon-test-support"
      ],
      "tracked-built-ins/test-support/*": [
        "addon-test-support/*"
      ],
      "*": [
        "types/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "addon/**/*",
    "tests/**/*",
    "types/**/*",
    "test-support/**/*",
    "addon-test-support/**/*"
  ]
}
